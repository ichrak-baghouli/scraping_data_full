<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- VUE LISTE PRINCIPALE -->
    <record id="view_scraping_cleanup_tree" model="ir.ui.view">
        <field name="name">scraping.cleanup.list</field>
        <field name="model">scraping.cleanup</field>
        <field name="arch" type="xml">
            <list string="Nettoyage Emails">
                <field name="name"/>
                <field name="status"/>
                <field name="date_run"/>
                <field name="total_processed"/>
                <field name="corrected_count"/>
                <field name="enriched_count"/>
                <field name="deleted_duplicates_count"/>
                <field name="deleted_invalid_count"/>
            </list>
        </field>
    </record>

    <!-- VUE FORMULAIRE -->
    <record id="view_scraping_cleanup_form" model="ir.ui.view">
        <field name="name">scraping.cleanup.form</field>
        <field name="model">scraping.cleanup</field>
        <field name="arch" type="xml">
            <form string="Nettoyage Emails">
                <header>
                    <button name="action_clean_emails_now" type="object" string="Nettoyer Maintenant" class="btn-primary"/>
                    <field name="status" widget="statusbar" statusbar_visible="pending,running,done"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="date_run"/>
                        <field name="duration_sec"/>
                    </group>
                    <group>
                        <field name="total_processed"/>
                        <field name="corrected_count"/>
                        <field name="enriched_count"/>
                        <field name="deleted_duplicates_count"/>
                        <field name="deleted_invalid_count"/>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTION WINDOW -->
    <record id="action_scraping_cleanup" model="ir.actions.act_window">
        <field name="name">Nettoyage Emails</field>
        <field name="res_model">scraping.cleanup</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- MENU -->
    <menuitem id="menu_scraping_cleanup_root" name="Nettoyage" parent="menu_scraping_root" sequence="20"/>
    <menuitem id="menu_scraping_cleanup" name="TÃ¢ches de Nettoyage" parent="menu_scraping_cleanup_root" action="action_scraping_cleanup"/>


</odoo>
